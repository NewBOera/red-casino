---
interface Props {
  title?: string;
  description?: string;
  imageSrc?: string;
  bgColor?: string;
  textColor?: string;
}

// Props recibidas por el componente
const { title = 'Lorem Ipsum?', description = null, imageSrc = '/public/assets/tournaments/dice.png', bgColor = '#F30C36', textColor = 'white' } = Astro.props;
---

<div class={`text-${textColor} flex flex-col gap-5 rounded-xl swiper-slide `} style={`background-color: ${bgColor}; padding: 1rem;`}>
  <h3 class="font-bold text-3xl">{title}</h3>
  {description && <p>{description}</p>}
  <slot />
  <div class="flex items-center gap-3">
    <span class="h-[3px] w-[33%] bg-white"></span>
    <div class="w-[33%] flex justify-center">
      <img src={imageSrc} alt="" />
    </div>
    <span class="h-[3px] w-[33%] bg-white"></span>
  </div>
</div>
