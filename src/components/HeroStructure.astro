---
interface Props {
  wrapperClasses?: string;
  idSection: string;
}

const { idSection, wrapperClasses } = Astro.props;
---

<section id={`${idSection}-section`} class="flex justify-center hero-section">
  <div
    class={`sm:w-[640px] md:w-[768px] lg:w-[1024px] xl:w-[1280px] 2xl:w-[1400px] flex flex-col pt-[112px] lg:pt-[150px] xl:pt-[80px] w-full px-3 sm:px-6 md:px-8 gap-8 sm:gap-16 md:gap-10 ${wrapperClasses}`}
  >
    <slot />
  </div>
</section>

<style>
  .hero-section {
    min-height: max-content;
  }
  @media (min-width: 1280px) {
    .hero-section {
      height: calc(100vh);
    }
  }

  @media (min-width: 1024px) {
    .hero-section {
      height: calc(100vh);
      min-height: 800px;
    }
  }
</style>
